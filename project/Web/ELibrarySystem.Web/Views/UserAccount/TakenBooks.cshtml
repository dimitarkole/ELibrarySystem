@{
    ViewData["Title"] = "TakenBooks";
}
@model ELibrarySystem.Web.ViewModels.UserAccount.TakenBooksViewModel
    <form asp-action="TakenBooks" asp-route-returnUrl="@ViewData["URL"]">
        <div class="container" style="background:#f7f7f7">
            <div class="row">
                <div class="col-md-12">
                    <h2>Всички взети книга</h2><br />

                    <hr />
                </div>
            </div>
            <div class="row">
                <h4 class="col-md-12">
                    Търсене:
                </h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>@ViewData["message"]</h3>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchTakenBook.BookName" class="control-label col-md-3">Заглавие</label>
                        <input asp-for="SearchTakenBook.BookName" class="form-control col-md-9" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchTakenBook.Author" class="control-label col-md-3">Автор</label>
                        <input asp-for="SearchTakenBook.Author" class="form-control col-md-9" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchTakenBook.GenreId" class="control-label  col-md-3">Жанр</label>

                        <select asp-for="SearchTakenBook.GenreId" class="col-md-9">
                            @if (Model.Genres != null)
                            {
                                @foreach (var genre in Model.Genres)
                                {
                                    <option value="@genre.Id">@genre.Name</option>

                                }
                            }

                        </select>
                        <span asp-validation-for="SearchTakenBook.GenreId" class="text-danger col-md-4"></span>
                    </div>



                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchTakenBook.LibraryEmail" class="control-label col-md-3">Библиотески Email</label>
                        <input asp-for="SearchTakenBook.LibraryEmail" class="form-control col-md-9" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">



                    </div>
                </div>
            </div>

            <div class="row" style="background:#f7f7f7">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="CountBooksOfPage" class="control-label  col-md-3">Покажи</label>

                        <select asp-for="CountBooksOfPage" class="col-md-9">
                            @foreach (var count in Model.CountBooksOfPageList)
                            {
                                <option value="@count">@count</option>

                            }
                        </select>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SortMethodId" class="control-label  col-md-3">Сортирай по</label>

                        <select asp-for="SortMethodId" class="col-md-9">
                            @foreach (var SortMethod in Model.SortMethods)
                            {
                                <option value="@SortMethod">@SortMethod</option>
                            }
                        </select>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <span class="text-danger col-md-10"></span>
                        <input type="submit" value="Търси" asp-action="TakenBooksSearch" class="btn btn-primary col-md-2" />
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Books != null)
        {
    <div class="container">
        <div class="row">
            <span class=" col-md-12"> <br /> </span>
        </div>

        <div class="row">
            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2"></span>

                    <label class="control-label  col-md-8">Заглавие</label>
                    <span class=" col-md-2"> </span>

                </div>
            </div>
            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2">  </span>
                    <label class="control-label  col-md-8">Автор</label>
                    <span class=" col-md-2">  </span>

                </div>
            </div>
            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2">  </span>
                    <label class="control-label  col-md-8">Жанр</label>
                    <span class=" col-md-2">  </span>

                </div>
            </div>

            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2">  </span>
                    <label class="control-label  col-md-8">Email</label>
                    <span class=" col-md-2">  </span>

                </div>
            </div>
            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2">  </span>
                    <label class="control-label  col-md-8">Взета на</label>
                    <span class=" col-md-2">  </span>

                </div>
            </div>

            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2">  </span>
                    <label class="control-label  col-md-8">Върната на</label>
                    <span class=" col-md-2">  </span>

                </div>

            </div>
        </div>



        @foreach (var book in @Model.Books)
        {
    <div class="row">
        <label class="control-label  col-md-2">@book.CatalogNumber</label>

        <label class="control-label  col-md-2">@book.BookName</label>
        <label class="control-label  col-md-2">@book.Author</label>
        <label class="control-label  col-md-2">@book.Genre</label>
        <label class="control-label  col-md-2">@book.LibraryEmail</label>

        <label class="control-label  col-md-2">@book.CreatedOn </label>
        <label class="control-label  col-md-2">@book.ReturnedOn</label>
    </div>
            <br />
        }
    </div>


        <div class="container">
            <div class="row">
                <span class="col-md-2"></span>
                <span class="col-md-1">Страници: </span>

                <div class="btn-toolbar col-md-6" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group" role="group" aria-label="First group">
                        @if (Model.CurrentPage > 1)
                        {
                            @if (Model.CurrentPage >= 2)
                            {
                                <input type="submit" value="|<" asp-route-id="1" class="btn btn-primary" asp-action="ChangePageTakenBooks" /><pre> </pre>
                            }
                            <input type="submit" value="<" class="col-md-5 btn btn-primary" asp-route-id="@(Model.CurrentPage-1)" asp-action="ChangePageTakenBooks" /><pre> </pre>
                        }
                    </div>
                    <div class="btn-group" role="group" aria-label="Before Page group">
                        @for (int i = Math.Max(Model.CurrentPage - 5, 1); i < Model.CurrentPage; i++)
                        {
                            <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangePageTakenBooks" class="btn btn-primary" /><pre> </pre>

                        }
                    </div>
                    <div class="btn-group" role="group" aria-label="Active Page group">
                        <input type="submit" value="@Model.CurrentPage" asp-route-id="@Model.CurrentPage" asp-action="ChangePageTakenBooks" class="btn btn-primary" /><pre> </pre>
                    </div>

                    <div class="btn-group" role="group" aria-label="After Page group">
                        @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 5, Model.MaxCountPage); i++)
                        {
                            <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangePageTakenBooks" class="btn btn-primary" /><pre> </pre>

                        }
                    </div>

                    <div class="btn-group" role="group" aria-label="Last group">

                        @if (Model.CurrentPage < Model.MaxCountPage)
                        {
                            <input type="submit" value=">" asp-route-id="@(Model.CurrentPage+1)" asp-action="ChangePageTakenBooks" class="btn btn-primary" /><pre> </pre>
                            @if (Model.CurrentPage < Model.MaxCountPage - 1)
                            {
                                <input type="submit" value=">|" asp-route-id="@Model.MaxCountPage" asp-action="ChangePageTakenBooks" class="btn btn-primary" /><pre> </pre>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
        }
        else
        {
        <div class="row">
            <div class="col-md-12">
                Все още нямате добавена книга към Вашата библиотека
            </div>
        </div>


        }

</form>
