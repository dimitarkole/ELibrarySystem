@model ELibrarySystem.Web.ViewModels.AdminAccount.UsersViewModel
@{
    ViewData["Title"] = "AllUsers";
}

<div class=" container">
    <div class="row">
        <div class="col-md-12">
            <h2>Всички потребители</h2>

        </div>
        <div class="col-md-12">
            <h3>@ViewData["message"]</h3>
        </div>
        <hr />
        <div class="col-md-12">
            <form asp-action="AllUsers" asp-route-returnUrl="@ViewData["AllUsers"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="SearchUser.Email" class="control-label col-md-2">Email на потребителя</label>
                    <input asp-for="SearchUser.Email" class="form-control col-md-6" />
                    <span asp-validation-for="SearchUser.Email" class="text-danger col-md-4"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="SearchUser.FirstName" class="control-label col-md-2">Име на потребител</label>
                    <input asp-for="SearchUser.FirstName" class="form-control col-md-6" />
                    <span asp-validation-for="SearchUser.FirstName" class="text-danger col-md-4"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="SearchUser.LastName" class="control-label col-md-2">Фамилия на потребител</label>
                    <input asp-for="SearchUser.LastName" class="form-control col-md-6" />
                    <span asp-validation-for="SearchUser.LastName" class="text-danger col-md-4"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="SearchUser.LibraryName" class="control-label col-md-2">Име на библиотеката</label>
                    <input asp-for="SearchUser.LibraryName" class="form-control col-md-6" />
                    <span asp-validation-for="SearchUser.LibraryName" class="text-danger col-md-4"></span>
                </div>

                @if (Model.Users != null)
                {
                    @foreach (var user in @Model.Users)
                    {
                        <div class="row">

                            @user.Email @user.FirstName @user.LastName @user.LastName @user.Type<br />
                            @if (user.Type == "admin")
                            {
                                <input type="submit" value="Направи го библиотека" asp-action="MakeUserLibrary" asp-route-id="@user.UserId" class="btn btn-default" />
                                <input type="submit" value="Направи го потребител" asp-action="MakeLibraryUser" asp-route-id="@user.UserId" class="btn btn-default" />

                            }
                            else
                            {
                                @if (user.Type == "user")
                                {
                                    <input type="submit" value="Направи го библиотека" asp-action="MakeUserLibrary" asp-route-id="@user.UserId" class="btn btn-default" />
                                }
                                @if (user.Type == "library")
                                {
                                    <input type="submit" value="Направи го потребител" asp-action="MakeLibraryUser" asp-route-id="@user.UserId" class="btn btn-default" />
                                }
                                <input type="submit" value="Направи го администратор" asp-action="MakeUserAdmin" asp-route-id="@user.UserId" class="btn btn-default" />
                            }

                            <input type="submit" value="Изтрий" asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-default" />
                            <br />

                        </div>
                    }
                    <div class="row">
                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group" role="group" aria-label="First group">
                                @if (Model.CurrentPage > 1)
                                {
                                    @if (Model.CurrentPage >= 2)
                                    {
                                        <input type="submit" value="|<" asp-route-id="1" asp-action="ChangeActivePage" class="btn btn-default" />
                                    }
                                    <input type="submit" value="<" asp-route-id="@(Model.CurrentPage-1)" asp-action="ChangeActivePage" class="btn btn-default" />

                                }

                            </div>

                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Last Pages group">
                                @for (int i = Math.Max(Model.CurrentPage - 5, 1); i < Model.CurrentPage; i++)
                                {
                                    <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-default" />
                                }
                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Active Page group">
                                <input type="submit" value="@Model.CurrentPage" asp-route-id="@Model.CurrentPage" asp-action="ChangeActivePage" class="btn btn-default" />

                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Upcoming Page group">
                                @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 5, Model.MaxCountPage); i++)
                                {
                                    <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-default" />

                                }

                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Fourth group">
                                <div class="btn-group" role="group" aria-label="First group">
                                    @if (Model.CurrentPage < Model.MaxCountPage)
                                    {
                                        <input type="submit" value=">" asp-route-id="@(Model.CurrentPage+1)" asp-action="ChangeActivePage" class="btn btn-default" />
                                        @if (Model.CurrentPage < Model.MaxCountPage - 1)
                                        {
                                            <input type="submit" value=">|" asp-route-id="@Model.MaxCountPage" asp-action="ChangeActivePage" class="btn btn-default" />
                                        }

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            Все още нямате добавена книга към Вашата библиотека
                        </div>
                    </div>
                }


            </form>
        </div>
    </div>
</div>

