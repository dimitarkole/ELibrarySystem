@model ELibrarySystem.Web.ViewModels.AdminAccount.UsersViewModel
@{
    ViewData["Title"] = "AllUsers";
}

    <form asp-action="AllUsers" asp-route-returnUrl="@ViewData["URL"]">

        <div class="container" style="background:#f7f7f7">
            <div class="row">
                <div class="col-md-12">
                    <h2>Всички потребители</h2>
                    <h3>@ViewData["message"]</h3>
                    <hr />
                </div>
            </div>
            <div class="row">
                <h4 class="col-md-12">
                    Търсене на потребител:
                </h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>@ViewData["message"]</h3>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchUser.Email" class="control-label col-md-3">Email</label>
                        <input asp-for="SearchUser.Email" class="form-control col-md-9" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchUser.FirstName" class="control-label col-md-3">Име на потребител</label>
                        <input asp-for="SearchUser.FirstName" class="form-control col-md-9" />
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <h3>@ViewData["message"]</h3>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchUser.LastName" class="control-label col-md-3">Фамилия</label>
                        <input asp-for="SearchUser.LastName" class="form-control col-md-9" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SearchUser.LibraryName" class="control-label col-md-3">Име на библиотеката</label>
                        <input asp-for="SearchUser.LibraryName" class="form-control col-md-9" />
                    </div>
                </div>
            </div>

            <div class="row" style="background:#f7f7f7">

                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="SortMethodId" class="control-label  col-md-3">Сортирай по</label>

                        <select asp-for="SortMethodId" class="col-md-9">
                            @foreach (var SortMethod in Model.SortMethods)
                            {
                                <option value="@SortMethod">@SortMethod</option>
                            }
                        </select>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="CountUsersOfPage" class="control-label  col-md-3">Покажи</label>

                        <select asp-for="CountUsersOfPage" class="col-md-9">
                            @foreach (var count in Model.CountUsersOfPageList)
                            {
                                <option value="@count">@count</option>

                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <span class="text-danger col-md-10"></span>

                        <input type="submit" value="Търси" asp-action="AllBooksSearch" class="btn btn-primary col-md-2" />


                    </div>
                </div>
            </div>
        </div>




        @if (Model.Users != null)
        {
            <div class="container">

                <div class="row">
                    <div class=" col-md-3">
                        <div class="row">
                            <span class=" col-md-2"></span>

                            <label class="control-label  col-md-8">Име на книгата</label>
                            <span class=" col-md-2"> </span>

                        </div>
                    </div>
                    <div class=" col-md-3">
                        <div class="row">
                            <span class=" col-md-2">  </span>
                            <label class="control-label  col-md-8">Автор</label>
                            <span class=" col-md-2">  </span>

                        </div>
                    </div>
                    <div class=" col-md-2">
                        <div class="row">
                            <span class=" col-md-2">  </span>
                            <label class="control-label  col-md-8">Жанр</label>
                            <span class=" col-md-2">  </span>

                        </div>
                    </div>
                    <div class=" col-md-2">
                        <div class="row">
                            <span class=" col-md-2">  </span>
                            <label class="control-label  col-md-8">Редактирай</label>
                            <span class=" col-md-2">  </span>

                        </div>
                    </div>

                    <div class=" col-md-2">
                        <div class="row">
                            <span class=" col-md-2">  </span>
                            <label class="control-label  col-md-8">Премахни</label>
                            <span class=" col-md-2">  </span>

                        </div>

                    </div>
                </div>

                <br />

                @foreach (var user in @Model.Users)
                {
            <div class="row">
                <label class="control-label  col-md-3"> @user.Email</label>
                <label class="control-label  col-md-3">@user.FirstName @user.LastName @user.LastName</label>
                <label class="control-label  col-md-2">@user.Type </label>



                @if (user.Type == "admin")
                {
                    <input type="submit" value="Направи го библиотека" asp-action="MakeUserLibrary" asp-route-id="@user.UserId" class="btn btn-default" />
                    <input type="submit" value="Направи го потребител" asp-action="MakeLibraryUser" asp-route-id="@user.UserId" class="btn btn-default" />

                }
                else
                {
                    @if (user.Type == "user")
                    {
                        <input type="submit" value="Направи го библиотека" asp-action="MakeUserLibrary" asp-route-id="@user.UserId" class="btn btn-default" />
                    }
                    @if (user.Type == "library")
                    {
                        <input type="submit" value="Направи го потребител" asp-action="MakeLibraryUser" asp-route-id="@user.UserId" class="btn btn-default" />
                    }
                    <input type="submit" value="Направи го администратор" asp-action="MakeUserAdmin" asp-route-id="@user.UserId" class="btn btn-default" />
                }

                <input type="submit" value="Изтрий" asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-default" />












               <!--<div class=" col-md-2">
                    <div class="row">
                        <span class=" col-md-2">  </span>
                        <input type="submit" value="Редактирай" asp-action="EditBookAllBook" asp-route-id="book.BookId" class="btn btn-primary col-md-8" />
                        <span class=" col-md-2">  </span>

                    </div>
                </div>
                <div class=" col-md-2">
                    <div class="row">
                        <span class=" col-md-2">  </span>
                        <input type="submit" value="Премахни" asp-action="DeleteBook" asp-route-id="book.BookId" class="btn btn-primary col-md-8" />
                        <span class="col-md-2">  </span>
                    </div>
                </div>-->
            </div>
                    <br />
                }
            </div>


            <div class="container">
                <div class="row">
                    <span class="col-md-2"></span>
                    <span class="col-md-1">Страници: </span>

                    <div class="btn-toolbar col-md-6" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group" role="group" aria-label="First group">
                            @if (Model.CurrentPage > 1)
                            {
                                @if (Model.CurrentPage >= 2)
                                {
                                    <input type="submit" value="|<" asp-route-id="1" class="btn btn-primary" asp-action="ChangeActivePage" /><pre> </pre>
                                }
                                <input type="submit" value="<" class="col-md-5 btn btn-primary" asp-route-id="@(Model.CurrentPage-1)" asp-action="ChangeActivePage" /><pre> </pre>
                            }
                        </div>
                        <div class="btn-group" role="group" aria-label="Before Page group">
                            @for (int i = Math.Max(Model.CurrentPage - 5, 1); i < Model.CurrentPage; i++)
                            {
                                <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-primary" /><pre> </pre>

                            }
                        </div>
                        <div class="btn-group" role="group" aria-label="Active Page group">
                            <input type="submit" value="@Model.CurrentPage" asp-route-id="@Model.CurrentPage" asp-action="ChangeActivePage" class="btn btn-primary" /><pre> </pre>
                        </div>

                        <div class="btn-group" role="group" aria-label="After Page group">
                            @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 5, Model.MaxCountPage); i++)
                            {
                                <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-primary" /><pre> </pre>

                            }
                        </div>

                        <div class="btn-group" role="group" aria-label="Last group">

                            @if (Model.CurrentPage < Model.MaxCountPage)
                            {
                                <input type="submit" value=">" asp-route-id="@(Model.CurrentPage+1)" asp-action="ChangeActivePage" class="btn btn-primary" /><pre> </pre>
                                @if (Model.CurrentPage < Model.MaxCountPage - 1)
                                {
                                    <input type="submit" value=">|" asp-route-id="@Model.MaxCountPage" asp-action="ChangeActivePage" class="btn btn-primary" /><pre> </pre>
                                }

                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        Все още нямате добавена книга към Вашата библиотека
                    </div>
                </div>
            </div>

        }









        <div class="row">
            <hr />
            <div class="col-md-12">


                @if (Model.Users != null)
                {
                    @foreach (var user in @Model.Users)
                    {
                        <div class="row">

                             <br />
                           
                            <br />

                        </div>
                    }
                    <div class="row">
                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group" role="group" aria-label="First group">
                                @if (Model.CurrentPage > 1)
                                {
                                    @if (Model.CurrentPage >= 2)
                                    {
                                        <input type="submit" value="|<" asp-route-id="1" asp-action="ChangeActivePage" class="btn btn-default" />
                                    }
                                    <input type="submit" value="<" asp-route-id="@(Model.CurrentPage-1)" asp-action="ChangeActivePage" class="btn btn-default" />

                                }

                            </div>

                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Last Pages group">
                                @for (int i = Math.Max(Model.CurrentPage - 5, 1); i < Model.CurrentPage; i++)
                                {
                                    <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-default" />
                                }
                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Active Page group">
                                <input type="submit" value="@Model.CurrentPage" asp-route-id="@Model.CurrentPage" asp-action="ChangeActivePage" class="btn btn-default" />

                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Upcoming Page group">
                                @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 5, Model.MaxCountPage); i++)
                                {
                                    <input type="submit" value="@i" asp-route-id="@i" asp-action="ChangeActivePage" class="btn btn-default" />

                                }

                            </div>
                            <pre> </pre>
                            <div class="btn-group" role="group" aria-label="Fourth group">
                                <div class="btn-group" role="group" aria-label="First group">
                                    @if (Model.CurrentPage < Model.MaxCountPage)
                                    {
                                        <input type="submit" value=">" asp-route-id="@(Model.CurrentPage+1)" asp-action="ChangeActivePage" class="btn btn-default" />
                                        @if (Model.CurrentPage < Model.MaxCountPage - 1)
                                        {
                                            <input type="submit" value=">|" asp-route-id="@Model.MaxCountPage" asp-action="ChangeActivePage" class="btn btn-default" />
                                        }

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            Все още нямате добавена книга към Вашата библиотека
                        </div>
                    </div>
                }


            </div>
        </div>
    </form>

