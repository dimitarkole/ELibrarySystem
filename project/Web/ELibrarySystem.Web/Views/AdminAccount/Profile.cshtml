@model ELibrarySystem.Web.ViewModels.AdminAccount.ProfilAdminViewModel

@{
    ViewData["Title"] = "Профил";
}

<form asp-action="Profile" asp-route-returnUrl="@ViewData["URL"]" enctype="multipart/form-data">

    <div class="container" style="background:#f7f7f7">
        <div class="row">
            <div class="col-md-12">
                <h2>Профил</h2>
                <h4>@ViewData["message"]</h4>
                <hr />
            </div>
        </div>
    </div>

    <div class="container" style="background:#f7f7f7">
        <div class="row">
            <div class="col-md-5">
                <img src="@Model.AvatarLocation" alt="Avatar" width="500px" height="500px" />
            </div>
            <div class="col-md-1">

            </div>

            <div class="col-md-6">
                <div class="form-group row">
                    <label asp-for="Photo" class="control-label col-md-5">Смени аватара</label>
                    <input asp-for="Photo" class="form-control col-md-6" />
                </div>


                <div class="form-group row">
                    <label asp-for="FirstName" class="control-label col-md-5">Име</label>
                    <input asp-for="FirstName" class="form-control col-md-6" />
                    <span asp-validation-for="FirstName" class="text-danger col-md-4"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="LastName" class="control-label col-md-5">Фамилия</label>
                    <input asp-for="LastName" class="form-control col-md-6" />
                </div>
                <div class="form-group row">
                    <span class="text-danger col-md-9"></span>

                    <input type="submit" value="Запази" class="btn btn-primary col-md-2" />
                </div>
            </div>
        </div>
    </div>
</form>