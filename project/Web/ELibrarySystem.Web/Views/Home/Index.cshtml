@model ELibrarySystem.Web.ViewModels.HomeViewModels.IndexViewModel
@{
    this.ViewData["Title"] = "Начало";
}

<!-- ***** Welcome Area Start ***** -->
<section class="welcome-area">
    <!-- Single Welcome Slide -->
    <div class="welcome-welcome-slide bg-gradient-overlay jarallax" style="background-image: url(img/bg-img/books.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <!-- Welcome Text -->
                    <div class="welcome-text">


                        <h3 style="color:white">
                            Вселената - някои я наричат Библиотеката. - Хорхе Луис Борхес
                        </h3>
                        <br>
                        <br>

                        <div class="row" style="color:white">


                            <a asp-area="" asp-action="LogInPage" asp-controller="Home" class="btn btn-primary col-md-3">
                                Вход
                            </a>
                            <span class="col-md-1"></span>
                            <a asp-area="" asp-action="RegesterAsUser" asp-controller="Home" class="btn btn-primary col-md-3">
                                Регистрация за читател
                            </a>
                            <span class="col-md-1"></span>
                            <a asp-area="" asp-action="RegesterAsLibrary" asp-controller="Home" class="btn btn-primary col-md-3">
                                Регистрация за библиотека
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- ****** About Us Area Start ******* -->
<section class="dento-about-us-area section-padding-100-0">
    <div class="container">
        <div class="row align-items-center">
            <!-- About Us Thumbnail -->
            <div class="col-12 col-md-6">
                <div class="about-us-thumbnail mb-50">
                    <img src="~/img/bg-img/burucration.jpg" alt="">
                </div>
            </div>
            <!-- About Content -->
            <div class="col-12 col-md-6">
                <div class="about-us-content mb-50">
                    <!-- Section Heading -->
                    <div class="section-heading">
                        <h2>Мисия</h2>
                        <div class="line"></div>
                    </div>
                    <p>
                        Библиотеките могат да се възползват от съвреммените техномогии
                        като подобрява работата си чрез автоматизация на бюрократични
                        и административни процеси свързани с проследяването на взета,
                        дадена или върната книга. Чрез използването на платформата,
                        библиотеките могат за пренебрегнат хартиените картони.
                        С тази малка стъпка, те ще помогнат в борбата срещу
                        обезлесявенето на гори и горски площи.
                    </p>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30">
                        <h6>Намаляване на бюрокрацията</h6>
                        <div id="bar1" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="80"></span>
                        </div>
                    </div>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30">
                        <h6>Модернизация</h6>
                        <div id="bar2" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="95"></span>
                        </div>
                    </div>

                    <!-- Single Skills Area -->
                    <div class="single-skills-area mt-30">
                        <h6>Увеличаване на читателите</h6>
                        <div id="bar3" class="barfiller">
                            <span class="tip"></span>
                            <span class="fill" data-percentage="50"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ****** About Us Area End ****** -->

<div class="container">
    <div class="dento-border clearfix"></div>
</div>

<!-- Cool Facts Area Start -->
<section class="dento-cta-area">
    <div class="container">
        <div class="row">
            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_genius"></i>
                    <h2><span class="counter">@Model.CountLibraries</span></h2>
                    <h5>Библиотеки</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_id"></i>
                    <h2><span class="counter">@Model.CountReaders</span></h2>
                    <h5>Потребители</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_book_alt"></i>
                    <h2><span class="counter">@Model.CountAddedBook</span></h2>
                    <h5>Добавени книги</h5>
                </div>
            </div>

            <!-- Cool Facts Area -->
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="single-cta text-center mt-50 mb-100">
                    <i class="icon_heart_alt"></i>
                    <h2><span class="counter">@Model.CountReadBook</span></h2>
                    <h5>Прочетени книги</h5>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Cool Facts Area End -->

