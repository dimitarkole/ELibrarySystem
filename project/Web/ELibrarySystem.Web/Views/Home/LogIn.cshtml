
@{
    ViewData["Title"] = "Вход";
}
@model ELibrarySystem.Web.ViewModels.HomeViewModels.LoginViewModel
<form asp-route-returnUrl="ViewData[" ReturnUrl"]" method="post">

    <div class=" container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="row" style="background:#f7f7f7">
                    <a asp-area="" asp-action="LogInPage" asp-controller="Home" class="btn btn-primary col-md-4">
                        Вход
                    </a>
                    <a asp-area="" asp-action="RegesterAsUser" asp-controller="Home" class="btn btn-primary col-md-4">
                        Регистрация за читател
                    </a>
                    <a asp-area="" asp-action="RegesterAsLibrary" asp-controller="Home" class="btn btn-primary col-md-4">
                        Регистрация за библиотека
                    </a>
                </div>


                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <h3>Вход:</h3>
                        </div>
                        <div class="form-group row">
                            <span>@ViewData["message"]</span>
                        </div>
                        <div class="text-danger">@ViewBag.LoginErr </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="control-label col-md-4"></label>
                            <input asp-for="Email" value="" class="form-control col-md-8" />
                            <span asp-validation-for="Email" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Password" class="control-label col-md-4">Парола</label>
                            <input asp-for="Password" value="" class="form-control col-md-8" />
                            <span asp-validation-for="Password" class="text-danger col-md-12"></span>
                        </div>


                        <div class="form-group row">
                            <label asp-for="RememberMe" class="control-label col-md-4">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                            <!--<input type="submit" value="Забравена парола" class="btn btn-primary col-md-3" asp-action="RegistrationAsLibrary" asp-controller="Home" />
        -->
                            <span class="control-label col-md-6"></span>
                            <input type="submit" value="Влез" class="btn btn-primary col-md-2" asp-action="LogIn" asp-controller="Home" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>
