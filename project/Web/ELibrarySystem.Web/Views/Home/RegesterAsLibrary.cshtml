
@{
    ViewData["Title"] = "Регистрация за библиотека";
}
@model ELibrarySystem.Web.ViewModels.HomeViewModels.RegisterViewModel
<form asp-route-returnUrl="ViewData[" ReturnUrl"]" method="post">

    <div class=" container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="row" style="background:#f7f7f7">
                    <a asp-area="" asp-action="LogInPage" asp-controller="Home" class="btn btn-primary col-md-4">
                        Вход
                    </a>
                    <a asp-area="" asp-action="RegesterAsUser" asp-controller="Home" class="btn btn-primary col-md-4">
                        Регистрация за читател
                    </a>
                    <a asp-area="" asp-action="RegesterAsLibrary" asp-controller="Home" class="btn btn-primary col-md-4">
                        Регистрация за библиотека
                    </a>
                </div>


                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <h3>Регистраия за библиотека:</h3>
                        </div>
                        <div class="text-danger">@ViewBag.RegisterErr </div>

                        <div class="form-group row">
                            <label asp-for="Email" class="control-label col-md-4"></label>
                            <input asp-for="Email" class="form-control col-md-8" />
                            <span asp-validation-for="Email" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Password" class="control-label col-md-4"></label>
                            <input asp-for="Password" class="form-control col-md-8" />
                            <span asp-validation-for="Password" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="control-label col-md-4"></label>
                            <input asp-for="ConfirmPassword" class="form-control col-md-8" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger col-md-12"></span>
                        </div>
                        <div class="form-group row">
                            <span class="col-md-9"></span>
                            <input type="submit" value="Регистрирай се" class="btn btn-primary col-md-3" asp-action="RegistrationAsLibrary" asp-controller="Home" />

                        </div>


                    </div>
                </div>

            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>
