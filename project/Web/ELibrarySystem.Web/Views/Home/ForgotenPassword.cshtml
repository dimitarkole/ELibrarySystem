
@{
    ViewData["Title"] = "Забравена парола";
}
@model ELibrarySystem.Web.ViewModels.HomeViewModels.ForgotenPasswordViewModel


<form asp-route-returnUrl="ViewData[" ReturnUrl"]" method="post">

    <div class=" container">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="row" style="background:#f7f7f7">
                    <span class="btn btn-primary col-md-4">Забравена парола</span>
                </div>


                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <h3>Забравена парола:</h3>
                        </div>
                        <div class="form-group row">
                            <span>@ViewData["message"]</span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="control-label col-md-4"></label>
                            <input asp-for="Email" value="" class="form-control col-md-8" />
                            <span asp-validation-for="Email" class="text-danger col-md-12"></span>
                        </div>


                        <div class="form-group row">
                            <span class="control-label col-md-6"></span>
                            <input type="submit" value="Изпрари код" class="btn btn-primary col-md-2" asp-action="ForgotenPasswordSendCode" asp-controller="Home" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>



