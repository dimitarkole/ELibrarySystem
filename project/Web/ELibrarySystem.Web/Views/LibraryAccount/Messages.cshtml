
@{
    ViewData["Title"] = "Известия";
}

@model ELibrarySystem.Web.ViewModels.LibraryAccount.MessagesViewModel
<h1>Известия</h1>
@if (Model.Messages != null)
{
    <div class="container">

        <div class="row">
            <div class=" col-md-10">
                <div class="row">

                    <label class="control-label  col-md-8">Съобщение</label>

                </div>
            </div>
            <div class=" col-md-2">
                <div class="row">
                    <span class=" col-md-2"></span>

                    <label class="control-label  col-md-8">Изпратено на</label>
                    <span class=" col-md-2"> </span>

                </div>
            </div>
        </div>

        <br />

        @foreach (var message in @Model.Messages)
        {
            <div class="row">
                <label class="control-label  col-md-10">
                    @if (@message.SeenOn == null)
                    {
                        <b>@message.TextOfMessage</b>
                    }
                    else
                    {
                        @message.TextOfMessage
                    }

                </label>

                <label class="control-label  col-md-2">
                    @message.CreatedOn
                </label>
            </div>
            <br />
        }
    </div>


    <div class="container">
        <div class="row">
            <span class="col-md-2"></span>
            <span class="col-md-1">Страници: </span>

            <div class="btn-toolbar col-md-6" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group" role="group" aria-label="First group">
                    @if (Model.CurrentPage > 1)
                    {
                        @if (Model.CurrentPage > 2)
                        {
                            <input type="submit" value="|<" asp-route-id="1" class="btn btn-primary" asp-action="Messages" /> <span>&nbsp;</span>
                        }
                        <input type="submit" value="<" class="col-md-5 btn btn-primary" asp-route-id="@(Model.CurrentPage-1)" asp-action="MessagesChangePage" /> <span>&nbsp;</span>
                    }
                </div>
                <div class="btn-group" role="group" aria-label="Before Page group">
                    @for (int i = Math.Max(Model.CurrentPage - 5, 1); i < Model.CurrentPage; i++)
                    {
                        <input type="submit" value="@i" asp-route-id="@i" asp-action="MessagesChangePage" class="btn btn-primary" /> <span>&nbsp;</span>

                    }
                </div>
                <div class="btn-group" role="group" aria-label="Active Page group">
                    <input type="submit" value="@Model.CurrentPage" asp-route-id="@Model.CurrentPage" asp-action="MessagesChangePage" class="btn btn-primary" />	<span>&nbsp;</span>
                </div>

                <div class="btn-group" role="group" aria-label="After Page group">
                    @for (int i = Model.CurrentPage + 1; i <= Math.Min(Model.CurrentPage + 5, Model.MaxCountPage); i++)
                    {
                        <input type="submit" value="@i" asp-route-id="@i" asp-action="MessagesChangePage" class="btn btn-primary" /> <span>&nbsp;</span>

                    }
                </div>

                <div class="btn-group" role="group" aria-label="Last group">

                    @if (Model.CurrentPage < Model.MaxCountPage)
                    {
                        <input type="submit" value=">" asp-route-id="@(Model.CurrentPage+1)" asp-action="MessagesChangePage" class="btn btn-primary" /><span>&nbsp;</span>
                        @if (Model.CurrentPage < Model.MaxCountPage - 1)
                        {
                            <input type="submit" value=">|" asp-route-id="@Model.MaxCountPage" asp-action="MessagesChangePage" class="btn btn-primary" /><span>&nbsp;</span>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                Все още нямате добавена книга към Вашата библиотека
            </div>
        </div>
    </div>

}
