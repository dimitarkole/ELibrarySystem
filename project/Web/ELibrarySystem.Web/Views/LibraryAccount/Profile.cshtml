@model ELibrarySystem.Web.ViewModels.LibraryAccount.ProfilLibraryViewModel

@{
    ViewData["Title"] = "Профил";
}
<div class=" container">
    <div class="row">
        <div class="col-md-12">
            <h2>Профил на книга</h2>

        </div>
        <div class="col-md-12">
            <h3>@ViewData["message"]</h3>
        </div>
    </div>

    <hr />
    <div class="row">

        <div class="col-md-12">
            <form asp-action="Profile" asp-route-returnUrl="@ViewData["AddBook"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Avatar" class="control-label col-md-2">Аватар</label>
                    <input asp-for="Avatar" class="form-control col-md-6" />
                    <span asp-validation-for="Avatar" class="text-danger col-md-4"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="LibararyName" class="control-label col-md-2">Име на библиотеката</label>
                    <input asp-for="LibararyName" class="form-control col-md-6" />
                    <span asp-validation-for="LibararyName" class="text-danger col-md-4"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="LibraryLocation" class="control-label col-md-2">Местоположение</label>
                    <input asp-for="LibraryLocation" class="form-control col-md-6" />
                    <span asp-validation-for="LibraryLocation" class="text-danger col-md-4"></span>
                </div>
                <div class="form-group row">
                    <span class="text-danger col-md-7"></span>

                    <input type="submit" value="Запази промените" class="btn btn-primary col-md-1" />
                </div>

            </form>
        </div>
    </div>
</div>
