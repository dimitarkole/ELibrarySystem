
@{
    ViewData["Title"] = "Stats";
}

<h1>Stats</h1>

@model ELibrarySystem.Web.ViewModels.LibraryAccount.StatsViewModel
@{
    var XLabelsGettenBookSinceSixМonth = Newtonsoft.Json.JsonConvert
        .SerializeObject(Model.ChartGettenBookSinceSixМonth
            .ChartData
                .Select(x => x.DimensionOne)
                .ToList());
    var YValuesGettenBookSinceSixМonth = Newtonsoft.Json.JsonConvert
        .SerializeObject(Model.ChartGettenBookSinceSixМonth
            .ChartData
                .Select(x => x.Quantity)
                .ToList());

    var XLabelsAddedBookSinceSixМonth = Newtonsoft.Json.JsonConvert
        .SerializeObject(Model.ChartAddedBookSinceSixМonth
            .ChartData
                .Select(x => x.DimensionOne)
                .ToList());
    var YValuesAddedBookSinceSixМonth = Newtonsoft.Json.JsonConvert
        .SerializeObject(Model.ChartAddedBookSinceSixМonth
            .ChartData
                .Select(x => x.Quantity)
                .ToList());
}



@ViewData["message"]
<div class="chart-container">
    <canvas id="chartGettenBookSinceSixМonth" style="width:100%; height:500px"></canvas>
</div>

@ViewData["message"]
<div class="chart-container">
    <canvas id="chartAddedBookSinceSixМonth" style="width:100%; height:500px"></canvas>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script type="text/javascript">

    $(function () {
        var chartName = "chartGettenBookSinceSixМonth";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabelsGettenBookSinceSixМonth),
                datasets: [{
                    label: "Departments Chart",
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValuesGettenBookSinceSixМonth)
                }]
            };

        var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
                    }],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]
                }
            };

        var myChart = new  Chart(ctx, {
                options: options,
                data: data,
                type:'line'
        });



        //Added

         var chartName = "chartAddedBookSinceSixМonth";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabelsAddedBookSinceSixМonth),
                datasets: [{
                    label: "Departments Chart",
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValuesAddedBookSinceSixМonth)
                }]
            };

        var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
                    }],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]
                }
            };

        var myChart = new  Chart(ctx, {
                options: options,
                data: data,
                type:'line'
        });


     });
</script>  